@model Capstone_FotoMe.Models.SearchByCriteriaViewModel

@{
    ViewData["Title"] = "SearchByCriteria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>SearchByCriteria</h1>

<h4>SearchByCriteriaViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchByCriteria">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SearchByCity" /> @Html.DisplayNameFor(model => model.SearchByCity)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SearchByRating" /> @Html.DisplayNameFor(model => model.SearchByRating)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SearchByPrice" /> @Html.DisplayNameFor(model => model.SearchByPrice)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

